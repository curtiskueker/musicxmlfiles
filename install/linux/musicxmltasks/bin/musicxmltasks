#!/bin/sh

MUSICXMLTASKS_HOME=
JAR_DIR=$MUSICXMLTASKS_HOME/lib

# execute the desktop or jar file
DESKTOP_FILE=/usr/share/applications/musicxmltasks.desktop
GTK_LAUNCH=`which gtk-launch`

if [ ! -z "$GTK_LAUNCH" ] && [ -f $DESKTOP_FILE ]; then
    $GTK_LAUNCH musicxmltasks
else
    $JAVA_HOME/bin/java -jar $JAR_DIR/musicxmltasks.jar
fi

